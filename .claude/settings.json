{
  "permissions": {
    "deny": [
      "Read(**/.env)",
      "Read(**/*.key)",
      "Read(**/secrets/**)"
    ],
    "allow": [
      "Read(*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(pnpm -v)",
      "Bash(pnpm install:*)",
      "Bash(pnpm -r test:*)",
      "Bash(pnpm -r lint:*)",
      "Bash(pnpm -r build:*)",
      "Bash(gemini -m *:*)",
      "Bash(gemini -p *:*)"
    ],
    "ask": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(rm *:*)",
      "Bash(del *:*)"
    ]
  }
}